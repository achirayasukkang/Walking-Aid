#include <Wire.h>
#include <MPU6050.h>

MPU6050 mpu;

void setup() {
  Wire.begin();
  Serial.begin(9600);
  mpu.initialize();
  if(!mpu.testConnection()) {
    Serial.println("MPU6050 connection failed");
    while(1);
  }
}

void loop() {
  mpu.getMotion6(&ax, &ay, &az, &gx, &gy, &gz);
  if (abs(ax) > threshold || abs(ay) > threshold || abs(az) > threshold) {
    steps++;
  }
  Serial.println(steps);
  delay(100);
}
